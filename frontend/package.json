{
	"name": "@simple-gantt/frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"build:strict": "pnpm run lint && pnpm run check && pnpm run build",
		"start": "node build",
		"preview": "vite preview --strictPort",
		"preview:lan": "vite preview --host 0.0.0.0 --port 4173 --strictPort",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "pnpm --dir .. exec prettier --check frontend --ignore-path .prettierignore && eslint .",
		"format": "pnpm --dir .. exec prettier --write frontend --ignore-path .prettierignore",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.3.4",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^24",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"playwright": "^1.58.1",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"dependencies": {
		"@simple-gantt/shared": "workspace:*",
		"axios": "^1.13.5",
		"xlsx": "^0.18.5"
	}
}
